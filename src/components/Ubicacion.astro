---
const { dataContact } = Astro.props;
---

<div class="bg-[#d0b8a8] text-[#5c3d2e] rounded-2xl p-8 mt-20 mb-10 flex flex-col items-center shadow-lg">
  <h2 class="text-center text-3xl md:text-5xl font-bold mb-6">{dataContact.titulo}</h2>

  <div class="grid md:grid-cols-2 gap-8 md:gap-16 w-full items-center">
    <!-- Información de Contacto -->
    <div class="space-y-6">
      <!-- Teléfono -->
      <a href={`tel:${dataContact.telefono}`} class="flex items-center space-x-4" data-aos="fade-up" data-aos-duration="1000">
        <i class="fa-solid fa-phone-alt w-8 h-8"></i>
        <p class="text-lg">{dataContact.telefono}</p>
      </a>

      <!-- Email -->
      <a href={`mailto:${dataContact.email}`} class="flex items-center space-x-4" data-aos="fade-up" data-aos-duration="1000">
        <i class="fa-solid fa-envelope w-8 h-8"></i>
        <p class="text-lg">{dataContact.email}</p>
      </a>

      <!-- Dirección -->
      <a href={`https://www.google.com/maps/search/?q=${encodeURIComponent(dataContact.mapsDireccion)}`} target="_blank" class="flex items-center space-x-4" data-aos="fade-up" data-aos-duration="1000">
        <i class="fa-solid fa-map-location w-8 h-8"></i>
        <p class="text-lg">{dataContact.mapsDireccion}</p>
      </a>
    </div>

    <!-- Mapa -->
    <div class="rounded-lg overflow-hidden flex justify-center">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3269.2172524591147!2d-58.376430588961796!3d-34.9762225727097!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bd2cab0592d9e5%3A0x383bf0069e82b31d!2sSuipacha%20355%2C%20B1864%20Alejandro%20Korn%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1739840028426!5m2!1ses!2sar"
        class="rounded-lg w-full h-[250px] md:h-[400px] shadow-md"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        data-aos="fade-up"
        data-aos-duration="1000"
      ></iframe>
    </div>
  </div>
</div>
