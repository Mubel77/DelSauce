      <div class="flex flex-col items-center text-center lg:m-12 lg:items-start mb-6 lg:mb-0">
        <h1 class="text-5xl text-center lg:text-start font-bold text-[#8A8D6D] leading-tight">
          {dataHero.titulo}
        </h1>
        <p class="mt-4 text-gray-700 lg:text-start">{dataHero.descripcion}</p>
        <button class="mt-6 bg-[#8A8D6D] hover:bg-[#6C6F50] text-white px-6 py-2 rounded">
          Cambi√© de color
        </button>
        
          {dataHero.boton}
        </button>
      </div>
      <div class="relative w-full lg:w-1/2">
        <img src={dataHero.imagen} alt="Helado Frutilla" class="w-full max-w-md mx-auto" />
      </div>
    </div>
  </section>
  