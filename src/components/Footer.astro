---
const { footer } = Astro.props;
---

<footer class="bg-[#502D1D] text-white py-8 px-6 mt-32 border-t-4 border-[#D4A373]">
  <div class="container mx-auto flex flex-col items-center text-center">
    
    <!-- Logo Arriba Centrado -->
    <div class="flex flex-col items-center mb-8">
      <img src={footer.logo} alt="Logo" class="h-16 mb-4" />
      <h3 class="text-lg font-semibold">{footer.titulo}</h3>
    </div>
    
    <!-- Contenedor de Contacto y Navegación -->
    <div class="flex flex-col sm:flex-row justify-center items-start w-full gap-8" style="display: flex; flex-wrap: wrap; justify-content: space-around; align-items: center;">
      
      <!-- Logo y Contacto -->
      <div class="flex flex-col items-center sm:items-start">
        <h4 class="text-lg font-semibold mb-4">Contacto</h4>
        <ul class="space-y-2">
          <li class="flex items-center gap-2">📞 {footer.contacto.telefono}</li>
          <li class="flex items-center gap-2">📧 {footer.contacto.email}</li>
          <li class="flex items-center gap-2">📍 {footer.contacto.direccion}</li>
        </ul>
      </div>

      <!-- Navegación -->
      <div class="flex flex-col items-center sm:items-start">
        <h4 class="text-lg font-semibold mb-4">Navegación</h4>
        <ul class="space-y-2">
          {footer.navbar.map((item) => (
            <li key={item.link}>
              <a href={'#' + item.link.toLowerCase()} class="hover:underline">{item.titulo}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Derechos de autor -->
  <div class="text-center mt-8">
    <h3 class="text-sm text-white">
      © 2025 Todos los derechos reservados | Creado por <a href="https://www.artesvirtualesgroup.com" target="_blank" class="text-white hover:text-gray-400">Artes Virtuales Group</a>
    </h3>
  </div>
</footer>
