---
const { servicios } = Astro.props;
---
<section class="bg-[#d0b8a8] py-10">
    <h2 class="text-center text-xl font-bold text-[#5c3d2e]">{servicios.tituloSuperior}</h2>
    <div class="flex flex-col md:flex-row items-center justify-center gap-10 p-5">
        {Object.values(servicios).slice(1).map(servicio => (
            <div class="text-center max-w-xs" key={servicio.titulo}>
                <img src={servicio.imagenes[0].imagen} alt={servicio.titulo} class="mx-auto w-20 h-20" />
                <h3 class="text-lg font-semibold text-[#5c3d2e]">{servicio.titulo}</h3>
                <p class="text-sm text-[#3e2b23]">{servicio.descripcion}</p>
            </div>
        ))}
    </div>
</section>
